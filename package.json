{
  "name": "vue-localstorage-reactive",
  "version": "1.0.0",
  "description": "Wrapper to use localStorage reactive in Vue 3",
  "main": "./dist/index.js",
  "type": "commonjs",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "scripts": {
    "init:husky": "husky install",
    "init": "npm run init:husky",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint --ext .js,.mjs .",
    "lint:fix": "npm run lint -- --fix",
    "clean": "rimraf dist",
    "bundle": "rollup --config",
    "prebuild": "npm run lint && npm run format:fix && npm run clean",
    "build": "npm run bundle"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cristopher1/vue-localstorage-reactive.git"
  },
  "keywords": [
    "vue",
    "reactive",
    "localStorage"
  ],
  "author": "Cristopher Luis Jim√©nez Meza",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cristopher1/vue-localstorage-reactive/issues"
  },
  "homepage": "https://github.com/cristopher1/vue-localstorage-reactive#readme",
  "dependencies": {
    "@babel/runtime-corejs3": "^7.22.11",
    "core-js": "^3.32.1"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.10",
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "rollup": "^3.28.0"
  }
}
